            document.querySelectorAll('.digit-input').forEach(inp => {
                inp.value = '';
                inp.classList.remove('filled');
            });
            document.querySelector('.digit-input')?.focus();
        };

        function getCodeFromInputs() {
            let code = '';
            document.querySelectorAll('.digit-input').forEach(inp => code += inp.value || '');
            return code;
