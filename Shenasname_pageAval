                const input = document.createElement('input');
                input.type = 'text';
                input.className = 'digit-input';
                input.maxLength = 1;
                input.inputMode = 'numeric';
                input.pattern = '\\d';
                input.dataset.index = i;
                input.addEventListener('input', handleDigitInput);
                input.addEventListener('keydown', handleDigitKeydown);
                input.addEventListener('paste', handlePaste);
                container.appendChild(input);
            }
        }

        function handleDigitInput(e) {
            const input = e.target;
            let val = input.value.replace(/\D/g, '');
            input.value = val;
            if (val) {
                input.classList.add('filled');
                const next = input.parentElement.querySelector(`.digit-input[data-index="${parseInt(input.dataset.index) + 1}"]`);
                if (next) next.focus();
            } else {
                input.classList.remove('filled');
            }
        }

        function handleDigitKeydown(e) {
            const input = e.target;
            if (e.key === 'Backspace' && !input.value) {
                const prev = input.parentElement.querySelector(`.digit-input[data-index="${parseInt(input.dataset.index) - 1}"]`);
                if (prev) { prev.focus(); prev.value = ''; prev.classList.remove('filled'); }
            }
        }

        function handlePaste(e) {
            e.preventDefault();
            const paste = (e.clipboardData || window.clipboardData).getData('text').replace(/\D/g, '').slice(0, 11);
            const inputs = document.querySelectorAll('.digit-input');
            for (let i = 0; i < paste.length; i++) {
                if (inputs[i]) {
                    inputs[i].value = paste[i];
                    inputs[i].classList.add('filled');
                }
            }
            if (paste.length < 11) {
                inputs[paste.length]?.focus();
            } else {
                inputs[10]?.focus();
            }
        }

